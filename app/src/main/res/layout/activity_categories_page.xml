<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categoriespage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36B5FF"
    tools:context=".activities.CategoriesPage">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/scrollView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="23dp"
                android:layout_height="53dp"
                app:layout_constraintBottom_toBottomOf="@+id/ordernowtext"
                app:layout_constraintEnd_toStartOf="@+id/ordernowtext"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ordernowtext"
                app:layout_constraintVertical_bias="0.45"
                app:srcCompat="@drawable/hambmenu"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/ordernowtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/cooperhewitt_medium"
                android:text="OrderNow!"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <AutoCompleteTextView
                android:id="@+id/enteraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="#F6ECEC"
                android:fontFamily="@font/cooperhewitt_medium"
                android:hint="Enter address"
                android:paddingBottom="15dp"

                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="@+id/ordernowtext"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="@+id/ordernowtext"
                app:layout_constraintTop_toBottomOf="@+id/ordernowtext" />

            <ImageView
                android:id="@+id/whitepin"
                android:layout_width="19dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/enteraddress"
                app:layout_constraintStart_toEndOf="@+id/enteraddress"
                app:layout_constraintTop_toTopOf="@+id/enteraddress"
                app:layout_constraintVertical_bias="0.47000003"
                app:srcCompat="@drawable/whitepin" />

            <EditText
                android:id="@+id/search_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/search_background"
                android:backgroundTint="#EDE9E9"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:ems="10"
                android:hint="Search food, fast food, or restaurants"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enteraddress"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/orderStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/cooperhewitt_bookitalic"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_text"
                app:layout_constraintVertical_bias="1.0" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="167dp"
                android:layout_height="116dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toEndOf="@+id/orderStatusTextView"
                app:layout_constraintTop_toTopOf="@+id/orderStatusTextView"
                app:layout_constraintVertical_bias="0.75"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/cooking" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <View
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1" />

    <ImageButton
        android:id="@+id/BurgerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/burger" />

    <ImageButton
        android:id="@+id/ChineseFoodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView1"
        app:layout_constraintEnd_toEndOf="@+id/scrollView1"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toEndOf="@+id/BurgerButton"
        app:layout_constraintTop_toTopOf="@+id/BurgerButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/chinesefood" />

    <ImageButton
        android:id="@+id/FastFoodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView1"
        app:layout_constraintEnd_toEndOf="@+id/scrollView1"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toEndOf="@+id/ChineseFoodButton"
        app:layout_constraintTop_toTopOf="@+id/ChineseFoodButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fastfood" />

    <ImageButton
        android:id="@+id/PizzaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="@+id/scrollView1"
        app:layout_constraintTop_toBottomOf="@+id/BurgerButton"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/pizza" />

    <ImageButton
        android:id="@+id/BreakfastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/scrollView1"
        app:layout_constraintTop_toTopOf="@+id/PizzaButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pancake" />

</androidx.constraintlayout.widget.ConstraintLayout>
